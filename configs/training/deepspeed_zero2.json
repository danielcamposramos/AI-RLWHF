{
  "train_batch_size": 16,
  "gradient_accumulation_steps": 2,
  "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0002,
      "betas": [0.9, 0.999],
      "eps": 1e-8,
      "weight_decay": 0.01
    }
  },
  "fp16": {
    "enabled": true,
    "loss_scale_window": 500
  },
  "zero_optimization": {
    "stage": 2,
    "allgather_partitions": true,
    "redundancy_degree": 1,
    "contiguous_gradients": true
  }
}
